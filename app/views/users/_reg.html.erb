<h2>Rejestracja</h2>
<p style="padding: 10px 0;">Wszystkie pola sÄ… wymagane</p>
<%= form_for @user, remote: true do |f| %>
  <% if @user.errors.any? %>
  
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :first_name, placeholder: true, class: "form-control", style: "margin-bottom: 10px;" %>
  <%= f.text_field :last_name, placeholder: true, class: "form-control", style: "margin-bottom: 10px;" %>
  <%= f.email_field :email, placeholder: true, class: "form-control", style: "margin-bottom: 10px;" %>
  <%= f.autocomplete_field :city, autocomplete_city_cname_reports_path, {class: 'form-control', style: "margin-bottom: 10px;", placeholder: true} %>
  <%= f.password_field :password, placeholder: true, class: "form-control", style: "margin-bottom: 10px;" %>
  <%= f.password_field :password_confirmation, placeholder: true, class: "form-control", style: "margin-bottom: 10px;" %>
  <div class="actions">
    <%= f.submit t('.register'), :class => "btn btn-lg btn-success pull-right" %>
  </div>
<% end %>