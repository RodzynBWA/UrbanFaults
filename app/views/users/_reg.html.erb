    <%= f.text_field :last_name, placeholder: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.email_field :email, placeholder: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.text_field :city, placeholder: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: true, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t('.register'),id: 'reg_btn', :class => "btn btn-lg btn-success pull-right" %>
  </div>
