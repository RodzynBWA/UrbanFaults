          <%= f.text_field :report_category_id %>
        </div>
        <div class="field">
          <%= f.text_field :street, placeholder: true %>
        </div>
        <div class="field">
          <%= f.text_field :house, placeholder: true %>
        </div>
        <div class="field">
          <%= f.text_field :short_place_desc, placeholder: true %>
        </div>
        <div class="field">
          <%= f.text_field :desc, placeholder: true %>
        </div>
        <div class="field">
          <%= f.text_field :image, placeholder: true %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      </div>
    </div>
  </div>
<% end %>


               