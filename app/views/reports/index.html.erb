<p id="notice"><%= notice %></p>

<h1>Listing Reports</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Report category</th>
      <th>Street</th>
      <th>House</th>
      <th>Short place desc</th>
      <th>Desc</th>
      <th>Image</th>
      <th>User</th>
      <th>Ip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.report_category %></td>
        <td><%= report.street %></td>
        <td><%= report.house %></td>
        <td><%= report.short_place_desc %></td>
        <td><%= report.desc %></td>
        <td><%= report.image %></td>
        <td><%= report.user %></td>
        <td><%= report.ip %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

